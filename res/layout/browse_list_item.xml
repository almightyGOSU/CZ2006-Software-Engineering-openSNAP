<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    
    android:padding="5dp"
    android:background="@drawable/journal_list_item_bg" >
    
    <TextView
	        android:id="@+id/tv_BrowseItem_productName"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        
	        android:gravity="center"
	        android:layout_margin="5dp"
	        
	        android:textColor="#000000"
	        android:textSize="22sp"
	        android:textStyle="bold"
	        
	        android:background="@drawable/background_light" />

    <ImageView
        android:id="@+id/iv_BrowseItem_productImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        
        android:layout_below="@id/tv_BrowseItem_productName"
        android:layout_margin="5dp"
        
        android:src="@drawable/journal_def_product_img"
        android:contentDescription="@string/journal_listItem_productImage" />

    <LinearLayout
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        
        android:layout_toEndOf="@id/iv_BrowseItem_productImage"
        android:layout_below="@id/tv_BrowseItem_productName"
        android:layout_margin="5dp"
        android:orientation="vertical"
        
        android:gravity="center" >
        
	    <TextView
	        android:id="@+id/tv_BrowseItem_numOfRaters"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        
	        android:gravity="center"
	        
	        android:textColor="#000000"
	        android:textSize="20sp"
	        android:textStyle="bold"
	        
	        android:background="@drawable/background_light" />
	    
	    <TextView
	        android:id="@+id/tv_BrowseItem_avgRating"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        
	        android:layout_marginTop="5dp"
	        
	        android:gravity="center"
	        
	        android:textColor="#000000"
	        android:textSize="20sp"
	        android:textStyle="bold"
	        
	        android:background="@drawable/background_light" />
	    
	</LinearLayout>
</RelativeLayout>